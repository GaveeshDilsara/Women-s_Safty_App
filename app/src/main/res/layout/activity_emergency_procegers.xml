<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_marginTop="50sp">

    <!-- Image Section -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pro"/>

    <!-- Text Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:text="Emergency Procedures"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/descriptionTextView"
            android:text="Quick access to essential emergency procedures, guiding you through critical steps for immediate safety, including contacting authorities, alerting trusted contacts, and locating nearby help resources."
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Emergency Procedures Information -->
        <TextView
            android:text="Essential Steps"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/step1TextView"
            android:text="1. **Call Emergency Services**: Dial the emergency number (e.g., 911) to report the situation and get immediate assistance."
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/step2TextView"
            android:text="2. **Contact Trusted Contacts**: Inform your trusted contacts about the situation and provide them with details on your location."
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/step3TextView"
            android:text="3. **Find Nearby Help Resources**: Use available resources such as nearby police stations, hospitals, or emergency shelters to seek help."
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/step4TextView"
            android:text="4. **Remain Calm**: Keep calm and focus on following the emergency procedures to ensure your safety and the effectiveness of the response."
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/step5TextView"
            android:text="5. **Provide Accurate Information**: When contacting authorities or trusted contacts, provide clear and accurate information about the emergency and your location."
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>
